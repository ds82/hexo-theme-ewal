<div class="navbar navbar-footer">
  <div class="container">
    <p class="navbar-center navbar-text">
      <% if (config.author){ %>
      &copy; <%= new Date().getFullYear() %> <%= config.author %>
      <% } else { %>
      &copy; <%= new Date().getFullYear() %> <%= config.title %>
      <% } %>

      <% if (config.email) { %>
      - <span class="email"><%= config.email.split("").reverse().join("") %></span>
      <% } %>


    </p>
  </div>
</div>